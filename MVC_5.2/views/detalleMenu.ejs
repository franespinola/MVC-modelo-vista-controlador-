<!DOCTYPE html>
<html>
 <%- include('./partials/head.ejs') %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/nav.ejs') %>

    <!-- Header -->
    <%- include('./partials/header.ejs') %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%=plato.nombe %></h1>
          <br />
          <% if(plato.descripcion =='') { %>
              <h4>Plato Tipico</h4>
          <% }else {%>
            <h4><%=plato.descripcion %></h4>
          <% } %>

          <p class="ps-text-grey">
            U$S <%=plato.precio%>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%=plato.imagen%>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>
    </div>
  </body>
</html>
